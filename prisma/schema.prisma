// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String?
  email    String? @unique
  password String?
  Event    Event?  @relation(fields: [eventId], references: [id])
  eventId  String?
  hub      Hub?    @relation(fields: [hubId], references: [id])
  hubId    String?
  admin    Boolean @default(true)
}

model Event {
  id       String    @id @default(uuid())
  name     String?
  date     DateTime?
  startime String?
  endtime  String?
  fullday  Boolean
  users    User[]
  colour   Colour?
}

model Hub {
  id     String  @id @default(uuid())
  name   String?
  User   User[]
  colour Colour?
}

enum Colour {
  RED
  BLUE
  GREEN
  ORANGE
  VIOLET
}
